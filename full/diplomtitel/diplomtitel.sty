\newcommand{\Titelblatt}{%
  %\cleardoublepage
  %
  \@TBrestonecolfalse
  \if@twocolumn \@TBrestonecoltrue \onecolumn \fi
  %
  %\setcounter{page}{-1}%
\begingroup
  \sf
  \pagestyle{empty}%
